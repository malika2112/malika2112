import math  # Импортируем библиотеку math для использования π (пи)

# Запросите у пользователя выбор фигуры
print("Выберите фигуру для вычисления площади:")
print("1. Прямоугольник")
print("2. Круг")
print("3. Треугольник")

выбор = int(input("Введите номер фигуры: "))

# В зависимости от выбора пользователя, вычисляем площадь
if выбор == 1:
    # Площадь прямоугольника
    a = int(input("a1= "))
    b = int(input("b1= "))
    площадь = a * b
    print("Площадь прямоугольника:", площадь)
elif выбор == 2:
    # Площадь круга
    r = int(input("r= "))
    площадь = r*r*2
    print("Площадь круга:", площадь)
elif выбор == 3:
    # Площадь треугольника
    основание = int(input("a2= "))
    высота = int(input("b2=  "))
    площадь = (основание * высота) / 2
    print("Площадь треугольника:", площадь)
else:
    print("Неверный выбор.")
