import math

def площадь_прямоугольника(a, b):
    return a * b

def площадь_круга(r):
    return math.pi * r ** 2

def площадь_треугольника(a, b):
    return 0.5 * a * b

def площадь_восьмиугольника(a, b):
    return 8 * a * b / 2

print("Выберите фигуру для вычисления площади:")
print("1. Прямоугольник")
print("2. Круг")
print("3. Треугольник")
print("4. Восьмиугольник")

выбор = int(input("Введите номер фигуры: "))

if выбор == 1:
    a = int(input("Введите длину a: "))
    b = int(input("Введите длину b: "))
    площадь = площадь_прямоугольника(a, b)
    print("Площадь прямоугольника:", площадь)
elif выбор == 2:
    r = int(input("Введите радиус r: "))
    площадь = площадь_круга(r)
    print("Площадь круга:", площадь)
elif выбор == 3:
    a = int(input("Введите длину основания a: "))
    b = int(input("Введите высоту b: "))
    площадь = площадь_треугольника(a, b)
    print("Площадь треугольника:", площадь)
elif выбор == 4:
    a = int(input("Введите длину стороны a: "))
    b = int(input("Введите длину апофемы b: "))
    площадь = площадь_восьмиугольника(a, b)
    print("Площадь восьмиугольника:", площадь)
else:
    print("Неверный выбор.")
